<div
  id="back"
  class="p-1 hover:border-green-600 rounded flex gap-2 border-2 border-neutral-700 items-center"
  title="Back"
>
  <div>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="#d4d4d4"
      class="w-4 h-4"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"></path>
    </svg>
  </div>
</div>
<script>
  const back = document.querySelectorAll("#back");

  back.forEach((b) => {
    b.addEventListener("click", () => {
      history.back();
    });
  });
</script>
