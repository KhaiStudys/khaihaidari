---
const { title, desc, link, cover } = Astro.props;
---

<a
  href={link}
  class="border-2 border-neutral-800 rounded-lg hover:bg-neutral-800"
>
  <img
    class="w-full aspect-video object-cover rounded-tr rounded-tl"
    src={cover}
    alt="img failed to load"
  />
  <div class="w-full flex flex-col gap-2 px-6 py-4">
    <p class="font-bold text-slate-50">{title}</p>
    <p class="text-[14px] text-custom-1">
      {desc}
    </p>
  </div>
</a>
